{
    "// === ENHANCED SETTINGS FOR ALL EXTENSIONS ===": "",
    
    "// === PRETTIER CONFIGURATION ===": "",
    "prettier.tabWidth": 4,
    "prettier.useTabs": true,
    "prettier.printWidth": 100,
    "prettier.singleQuote": false,
    "prettier.trailingComma": "es5",
    "prettier.bracketSpacing": true,
    "prettier.arrowParens": "always",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "// === MARKDOWN LINT ===": "",
    "markdownlint.config": {
        "default": true,
        "MD003": { "style": "atx" },
        "MD007": { "indent": 2 },
        "MD013": { "line_length": 100 },
        "MD025": false,
        "MD033": false,
        "MD034": false,
        "MD041": false
    },

    "// === TODO TREE CONFIGURATION ===": "",
    "todo-tree.highlights.enabled": true,
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "type": "text-and-comment",
        "foreground": "#ff0000",
        "background": "#ffffff",
        "opacity": 50,
        "iconColour": "#ff0000",
        "gutterIcon": true
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "check",
            "iconColour": "#00ff00",
            "foreground": "#00ff00",
            "type": "text"
        },
        "FIXME": {
            "icon": "bug",
            "iconColour": "#ff0000",
            "foreground": "#ff0000",
            "type": "text"
        },
        "HACK": {
            "icon": "tools",
            "iconColour": "#ffa500",
            "foreground": "#ffa500",
            "type": "text"
        },
        "NOTE": {
            "icon": "info",
            "iconColour": "#0000ff",
            "foreground": "#0000ff",
            "type": "text"
        },
        "EDUCATIONAL": {
            "icon": "book",
            "iconColour": "#9c27b0",
            "foreground": "#9c27b0",
            "type": "text"
        },
        "REFACTOR": {
            "icon": "sync",
            "iconColour": "#ff9800",
            "foreground": "#ff9800",
            "type": "text"
        }
    },
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "XXX",
        "HACK",
        "WARNING",
        "NOTE",
        "EDUCATIONAL",
        "REFACTOR",
        "OPTIMIZE",
        "BUG"
    ],
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.tree.showBadges": true,

    "// === GITLENS CONFIGURATION ===": "",
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "gitlens.blame.avatars": false,
    "gitlens.blame.compact": true,
    "gitlens.blame.heatmap.enabled": false,
    "gitlens.statusBar.enabled": true,
    "gitlens.statusBar.alignment": "right",

    "// === BETTER COMMENTS ===": "",
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "educational",
            "color": "#9C27B0",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        }
    ],

    "// === ERROR LENS ===": "",
    "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
    "errorLens.excludeBySource": [],
    "errorLens.delay": 300,
    "errorLens.followCursor": "activeLine",
    "errorLens.fontWeight": "normal",
    "errorLens.margin": "30ch",
    "errorLens.padding": "2px 4px",

    "// === SPELL CHECKER ===": "",
    "cSpell.language": "en-US",
    "cSpell.words": [
        "anatomical",
        "autoload",
        "autoloads",
        "brainstem",
        "elif",
        "gdscript",
        "gltf",
        "godot",
        "hippocampus",
        "lerp",
        "neurovis",
        "neuroscience",
        "pathology",
        "raycast",
        "striatum",
        "thalamus",
        "tscn",
        "tres",
        "viewport",
        "voxel"
    ],
    "cSpell.ignorePaths": [
        ".godot/**",
        "**/*.import",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/**",
        "**/.pnp.*",
        "**/*.min.*",
        "**/*.map"
    ],

    "// === PATH INTELLISENSE ===": "",
    "path-intellisense.mappings": {
        "res://": "${workspaceFolder}/",
        "@core": "${workspaceFolder}/core",
        "@ui": "${workspaceFolder}/ui",
        "@assets": "${workspaceFolder}/assets",
        "@scenes": "${workspaceFolder}/scenes"
    },
    "path-intellisense.autoSlashAfterDirectory": true,
    "path-intellisense.extensionOnImport": true,

    "// === PROJECT MANAGER ===": "",
    "projectManager.git.baseFolders": [
        "/Users/gagelaporta/Desktop"
    ],
    "projectManager.sortList": "Name",

    "// === ADDITIONAL SETTINGS ===": "",
    "editor.rulers": [80, 100, 120],
    "editor.renderWhitespace": "selection",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.linkedEditing": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.suggestSelection": "first",
    "editor.parameterHints.enabled": true,
    "explorer.sortOrder": "type",
    "explorer.compactFolders": false,
    "github.copilot.inlineSuggest.enable": true,
    "files.maxMemoryForLargeFilesMB": 4096,
    "editor.maxTokenizationLineLength": 20000,
    "search.followSymlinks": false,
    "search.smartCase": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 10
}