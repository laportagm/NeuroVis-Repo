{
  "component": "InfoPanel",
  "version": "2.0",
  "designSystem": {
    "colors": {
      "panel": {
        "background": "rgba(15, 15, 23, 0.85)",
        "backgroundBlur": "24px",
        "border": "rgba(0, 217, 255, 0.15)",
        "borderHover": "rgba(0, 217, 255, 0.3)"
      },
      "text": {
        "heading": "#00D9FF",
        "subheading": "#B0B0C0",
        "body": "#E8E8E8",
        "accent": "#06FFA5",
        "muted": "#808090"
      },
      "interactive": {
        "buttonPrimary": "#00D9FF",
        "buttonSecondary": "#7209B7",
        "buttonDanger": "#FF073A",
        "hover": "rgba(0, 217, 255, 0.1)",
        "pressed": "rgba(0, 217, 255, 0.2)"
      }
    },
    "typography": {
      "structureName": {
        "fontSize": 24,
        "fontWeight": "bold",
        "letterSpacing": -0.5,
        "lineHeight": 1.2
      },
      "sectionHeading": {
        "fontSize": 14,
        "fontWeight": "semibold",
        "letterSpacing": 0.5,
        "textTransform": "uppercase",
        "opacity": 0.7
      },
      "bodyText": {
        "fontSize": 14,
        "fontWeight": "normal",
        "lineHeight": 1.6
      },
      "functionItem": {
        "fontSize": 13,
        "fontWeight": "normal",
        "lineHeight": 1.5
      }
    },
    "spacing": {
      "panelPadding": 24,
      "sectionGap": 20,
      "itemGap": 12,
      "inlineGap": 8
    },
    "effects": {
      "glassMorphism": {
        "backdropBlur": "24px",
        "backgroundOpacity": 0.85,
        "borderOpacity": 0.15,
        "shadowColor": "rgba(0, 0, 0, 0.4)",
        "shadowBlur": 32,
        "shadowY": 8
      },
      "hover": {
        "scale": 1.02,
        "glowColor": "rgba(0, 217, 255, 0.2)",
        "glowSize": 8
      }
    },
    "animation": {
      "entranceDelay": 0,
      "entranceDuration": 0.4,
      "entranceEasing": "cubic-bezier(0.34, 1.56, 0.64, 1)",
      "exitDuration": 0.2,
      "hoverDuration": 0.15,
      "contentFadeDuration": 0.3
    }
  },
  "layout": {
    "responsive": {
      "desktop": {
        "width": "25%",
        "minWidth": 320,
        "maxWidth": 480,
        "position": "right",
        "offset": 24
      },
      "tablet": {
        "width": "40%",
        "minWidth": 320,
        "maxWidth": 400,
        "position": "right",
        "offset": 16
      },
      "mobile": {
        "width": "90%",
        "position": "bottom",
        "height": "50%"
      }
    },
    "sections": [
      {
        "id": "header",
        "layout": "horizontal",
        "height": 48,
        "elements": [
          {
            "type": "structureName",
            "flex": 1,
            "truncate": true
          },
          {
            "type": "actionButtons",
            "layout": "horizontal",
            "gap": 8,
            "buttons": ["bookmark", "share", "close"]
          }
        ]
      },
      {
        "id": "description",
        "collapsible": false,
        "defaultExpanded": true,
        "maxHeight": 120,
        "scrollable": true
      },
      {
        "id": "functions",
        "collapsible": true,
        "defaultExpanded": true,
        "showCount": true,
        "itemLayout": "list"
      },
      {
        "id": "connections",
        "collapsible": true,
        "defaultExpanded": false,
        "showCount": true,
        "itemLayout": "grid"
      },
      {
        "id": "clinicalNotes",
        "collapsible": true,
        "defaultExpanded": false,
        "premium": true
      }
    ]
  },
  "interactions": {
    "hover": {
      "panel": {
        "borderOpacity": 0.3,
        "glowEffect": true
      },
      "buttons": {
        "scale": 1.1,
        "backgroundColor": "rgba(255, 255, 255, 0.1)"
      },
      "listItems": {
        "backgroundColor": "rgba(0, 217, 255, 0.05)",
        "translateX": 4
      }
    },
    "click": {
      "buttons": {
        "scale": 0.95,
        "duration": 0.1
      },
      "sections": {
        "toggleAnimation": "slideRotate",
        "duration": 0.3
      }
    }
  },
  "accessibility": {
    "focusIndicator": {
      "color": "#00D9FF",
      "width": 2,
      "offset": 2
    },
    "keyboardNav": {
      "enabled": true,
      "tabOrder": ["close", "bookmark", "share", "sections"]
    },
    "screenReader": {
      "announceStructureChange": true,
      "sectionsLandmarks": true
    }
  }
}
