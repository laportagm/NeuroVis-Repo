# EditorConfig for NeuroVis Educational Platform
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# GDScript files - Using spaces per project standards
[*.gd]
indent_style = space
indent_size = 4
max_line_length = 100

# Godot scene and resource files
[*.{tscn,tres,godot,import,res}]
indent_style = tab
indent_size = 4

# Shader files
[*.{gdshader,shader}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
max_line_length = 80

# Documentation files
[docs/**.md]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Batch scripts
[*.{cmd,bat}]
end_of_line = crlf

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# C# files
[*.cs]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8-bom

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Configuration files
[*.{cfg,conf,ini}]
indent_style = space
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Git files
[{.gitignore,.gitattributes}]
indent_style = space
indent_size = 2
